<nav class="navbar navbar-dark bg-dark">
  <span class="text-white mx-auto" style="line-height: 34px;">Create New Portfolio</span>
</nav>

<br>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <h1>Create a new Album</h1>
      <p></p>
      <%= form_for(@portfolio) do |f| %>
        <div class="mb-4">
          <%= f.label :title, class: "form-label h4" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="mb-4">
          <%= f.label :subtitle, class: "form-label h4" %>
          <%= f.text_field :subtitle, class: "form-control" %>
        </div>
        <div class="mb-4">
          <%= f.label :body, class: "form-label h4" %>
          <%= f.text_field :body, class: "form-control" %>
        </div>
        <div class="text-center mt-4">
          <%= f.submit "Submit", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>